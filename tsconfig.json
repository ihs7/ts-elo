{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "eslint.config.mjs"],
  "include": ["./src"]
}
